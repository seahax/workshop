{
  "name": "@seahax/vite-plugin-lib",
  "version": "0.8.7",
  "private": false,
  "description": "Use Vite to just build a library. It's not that hard. Why are there so many settings!?",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seahax/workshop.git",
    "directory": "packages/vite-plugin-lib"
  },
  "license": "Unlicense",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc -b -f tsconfig.build.json",
    "clean": "rm -rf dist",
    "diff": "npm run build >/dev/null && npm diff 'dist/**.mjs' 'dist/**.cjs' 'dist/**.js' 'dist/**.d.ts'",
    "prepublishOnly": "npm test && npm run build",
    "test": "eslint src"
  },
  "devDependencies": {
    "@seahax/eslint": "^0.2.27",
    "@seahax/vitest": "^0.1.8",
    "eslint": "^9.39.2",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "vite": ">=7.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
