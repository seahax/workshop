{
  "name": "@seahax/vite-plugin-zip",
  "version": "0.1.12",
  "private": false,
  "description": "Vite plugin that zips up the build output.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seahax/workshop.git",
    "directory": "packages/vite-plugin-zip"
  },
  "license": "Unlicense",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc -b -f tsconfig.build.json",
    "clean": "rm -rf dist",
    "diff": "npm run build >/dev/null && npm diff 'dist/**.mjs' 'dist/**.cjs' 'dist/**.js' 'dist/**.d.ts'",
    "prepublishOnly": "npm test && npm run build",
    "test": "eslint src"
  },
  "dependencies": {
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "fast-glob": "^3.3.3",
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@seahax/eslint": "^0.2.27",
    "@seahax/vite-plugin-lib": "^0.8.7",
    "eslint": "^9.39.2"
  },
  "peerDependencies": {
    "vite": ">=7.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
